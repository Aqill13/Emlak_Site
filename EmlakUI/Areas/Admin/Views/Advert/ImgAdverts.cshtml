@model List<Images>
@{
    ViewData["Title"] = "ImgAdverts";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .pagetitle {
        position: relative;
        display: flex;
        justify-content: space-between;
    }

    .pagetitle_add_button {
        right: 25px;
        margin-top: 6px;
    }

    .images {
        display: grid;
        gap: 10px;
        grid-template-columns: repeat(3, 1fr)
    }

        .images img {
            width: 300px;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
            border: 1px solid #444;
        }

    .btn-danger {
        position: relative;
        right: 90px;
        top: 120px;
    }
</style>

<div class="pagetitle">
    <div class="pagetitle_text">
        <h1>Advert Images</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Advert Images</li>
            </ol>
        </nav>
    </div>
    <div class="pagetitle_add_button">

        <a asp-action="Index" asp-controller="Advert" class="btn btn-warning" style="width:200px">Back</a>
    </div>
</div>
<div class="images">
    @foreach (var img in Model)
    {
        <div>
            <img src="~/Pictures/@img.ImageUrl" alt="img" />
            <button data-id="@img.Id" class="btn btn-danger">Delete</button>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $(".images").on("click", ".btn-danger", function () {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu işlemi geri alamazsınız!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'Hayır, iptal et'
            }).then((result) => {
                if (result.isConfirmed) {
                    var btn = $(this);
                    var id = btn.data("id");
                    $.ajax({
                        type: "GET",
                        url: "/Admin/Advert/DeleteImg?id=" + id,
                        success: function () {
                            btn.parent().remove();
                        }
                    });
                    iziToast.settings({
                        timeout: 3000,
                        resetOnHover: false,
                        icon: 'material-icons',
                        transitionIn: 'flipInX',
                        transitionOut: 'flipOutX',
                    });

                    iziToast.warning({
                        icon: 'fa-solid fa-check',
                        title: 'Image Deleted! ',
                        message: 'Successful',
                    });

                }
            });
        });
    })
</script>

