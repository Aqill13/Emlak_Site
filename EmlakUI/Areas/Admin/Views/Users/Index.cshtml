
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<UserAdmin>


<style>
    .pagetitle {
        position: relative;
        display: flex;
        justify-content: space-between;
    }

    .pagetitle_add_button {
        position: fixed;
        right: 25px;
        margin-top: 6px;
    }

    .pagetitle_text {
        position: fixed;
    }

    #table-container {
        position: relative;
        overflow-x: auto;
        max-width: 100%;
        margin-top: 70px;
    }

    #table td:first-child {
        position: sticky;
        left: -1px;
        z-index: 2;
    }

    .button {
        position: relative;
        width: 202px;
        height: 45px;
        cursor: pointer;
        display: flex;
        align-items: center;
        border: 1px solid #395886;
        border-radius: 10px;
        background-color: #628ECB;
        transition: 0.2s;
    }

    .button, .button__icon, .button__text {
        transition: all 0.3s;
    }

        .button .button__text {
            transform: translateX(30px);
            color: #fff;
            font-weight: 600;
        }

        .button .button__icon {
            position: absolute;
            transform: translateX(164px);
            height: 100%;
            width: 39px;
            background-color: #395886;
            display: flex;
            align-items: center;
            border-radius: 10px;
            justify-content: center;
        }

        .button .svg {
            width: 30px;
            stroke: #fff;
        }

        .button:hover {
            background: #395886;
        }

            .button:hover .button__text {
                color: transparent;
            }

            .button:hover .button__icon {
                width: 164px;
                transform: translateX(20px);
            }

        .button:active {
            transform: scale(0.9);
        }

</style>

@if (TempData["updateUser"] != null)
{
    <script>
        iziToast.settings({
            timeout: 3000,
            resetOnHover: false,
            icon: 'material-icons',
            transitionIn: 'flipInX',
            transitionOut: 'flipOutX',
        });

        iziToast.success({
            icon: 'fa-solid fa-check',
            title: 'Updated! ',
            message: '@TempData["updateUser"]',
        });
    </script>
}

